<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.brainiac.AlarmeActivity">

    <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"
        android:layout_width="match_parent" android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/view">

        <android.support.v7.widget.Toolbar android:id="@+id/toolbar_main"
            android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" app:popupTheme="@style/AppTheme.PopupOverlay" >

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:layout_below="@+id/view"
        android:layout_margin="10dp" android:id="@+id/lin_lay_1"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Título:"
                android:id="@+id/textView" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Me lembrar em:"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dia da semana:"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="-10dp"
            android:layout_marginTop="20dp" />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:paddingRight="-20dp"
            android:baselineAligned="false"
            android:clickable="true"
            android:visibility="visible"
            android:layout_marginStart="70dp"
            android:foregroundGravity="center_horizontal"
            android:columnOrderPreserved="true"
            android:layout_marginEnd="65dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                android:id="@+id/checkBox"
                android:checked="false"
                android:paddingBottom="35dp"
                android:paddingRight="10dp"
                android:paddingLeft="-20dp"
                android:singleLine="false"
                android:clickable="true"
                android:visibility="visible" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:id="@+id/checkBox2"
                android:checked="false"
                android:paddingBottom="35dp"
                android:paddingLeft="-20dp"
                android:paddingRight="10dp"
                android:singleLine="false"
                android:clickable="true"
                android:visibility="visible" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T"
                android:id="@+id/checkBox3"
                android:checked="false"
                android:paddingLeft="-20dp"
                android:paddingRight="10dp"
                android:paddingBottom="35dp"
                android:singleLine="false"
                android:clickable="true"
                android:visibility="visible" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q"
                android:id="@+id/checkBox4"
                android:checked="false"
                android:paddingBottom="35dp"
                android:paddingRight="10dp"
                android:paddingLeft="-20dp"
                android:singleLine="false"
                android:clickable="true"
                android:visibility="visible" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q"
                android:id="@+id/checkBox5"
                android:checked="false"
                android:paddingLeft="-20dp"
                android:paddingRight="10dp"
                android:paddingBottom="35dp"
                android:singleLine="false"
                android:clickable="true"
                android:visibility="visible" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:id="@+id/checkBox6"
                android:checked="false"
                android:paddingBottom="35dp"
                android:paddingRight="10dp"
                android:paddingLeft="-20dp"
                android:singleLine="false"
                android:clickable="true"
                android:visibility="visible" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:id="@+id/checkBox7"
                android:checked="false"
                android:paddingLeft="-20dp"
                android:paddingRight="10dp"
                android:paddingBottom="35dp"
                android:singleLine="false"
                android:clickable="true"
                android:visibility="visible" />
        </GridLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Lugar: "
                android:id="@+id/textView2" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:id="@+id/editText2"
                android:layout_weight="0.63" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:id="@+id/button" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Horário: "
                android:id="@+id/textView3" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:id="@+id/editText3"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:id="@+id/button2" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginStart="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/lin_lay_1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/button4"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excluir"
        android:id="@+id/button5"
        android:layout_marginEnd="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignTop="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

</RelativeLayout>